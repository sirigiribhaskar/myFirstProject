@model DataAccessLayer.AspNetUser

@{
    ViewBag.Title = "Edit";
    if (ViewBag.deptid == "D4")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPageEmp.cshtml";
    }
}

<h2 class="text-left">Edit Personal Information</h2>


