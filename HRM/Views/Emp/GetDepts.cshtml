@model IEnumerable<DataAccessLayer.Dept>

@{
    ViewBag.Title = "GetDepts";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 >Departments Info</h2>

<div class="container" style="margin-top:10px">

    <div class="row">

        <div class="col-sm-8 col-sm-offset-0 alert alert-dark">
            <button class="text-center col-sm-5 ">
                @Html.ActionLink("Create New Dept", "CreateDept", "Emp")
            </button>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    <button>
                        @Html.ActionLink("Edit", "EditDept", new { id = item.DepartmentId })
                    </button>
                    <button>
                        @Html.ActionLink("Details", "DetailsDept", new { id = item.DepartmentId }) |
                    </button>
                    <button>
                        @Html.ActionLink("Delete", "DeleteDept", new { id = item.DepartmentId })
                    </button>
                </td>
            </tr>
}

            </table>
        </div>
        </div>
    </div>
